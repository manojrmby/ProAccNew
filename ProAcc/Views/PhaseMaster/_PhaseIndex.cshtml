<script type="text/javascript">
    
    $(document).ready(function () {
        $("#tblPhase").dataTable();     
    });

   
    $(".btnDelete").on("click", function () {
        var id = $(this).next().val();
       var retVal = confirm("Do you want to delete ?");
               if( retVal == true ) {
                $.ajax({
                type: "POST",
                url: '@Url.Action("Delete","PhaseMaster")',
                data: { id:id },
                dataType: "json",
                success: function (response) {
                    if (response == "success") {
                        alert("Phase name deleted successfully!");
                        loadPhases();
                        resetPhase();
                        //location.reload();
                    }
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
                  return true;
               } else {
                  return false;
               }
    });

    $(".editPhase").on("click", function () {
        //debugger;
        var id = $(this).next().val();
        $.ajax({
            url: '@Url.Action("GetPhaseById","PhaseMaster")',
            type: "GET",
            data: { id: id },
            success: function (result) {

                $("#PhaseId").val(result.Id);
                $("#txtPhaseName").val(result.PhaseName);
                $("#pcre_on").val(result.Cre_on);
                $("#pcre_By").val(result.Cre_By);
                $("#btnAddPhase").show();
                $("#btnPhaseUpdate").show();
                $("#btnPhaseCreate").hide();

            },
            error: function (err) {
                alert(err);
            }
        });
    });
</script>
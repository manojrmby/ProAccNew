<script>
    function loadPhases() {

        $.ajax({
            type: "GET",
            url: '@Url.Action("GetPhaseList", "PhaseMaster")',

            success: function (response) {
            $("#divPhaseList").html(response);
            },
            failure: function (response) {
            alert(response.responseText);
            },
            error: function (response) {
            alert(response.responseText);
            }
         });
    }
    function loadStatus() {

        $.ajax({
            type: "GET",
            url: '@Url.Action("GetStatusList", "PhaseMaster")',

            success: function (response) {

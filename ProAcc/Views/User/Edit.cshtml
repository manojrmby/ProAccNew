        var lblEmail = $("#lblUserEmail").text().trim();
        var lblPassword = $("#lblPassword").text().trim();
        var lblCnfmPassword = $("#lblCnfmPassword").text().trim();

        if (userMasterName != "" && Mobile != "" && Email != ""&& Password!="" && lblName == "" && lblMobile == "" && lblEmail ==""&&lblPassword=="" &&lblCnfmPassword=="" ) {
            $("#btnsaveUser").prop("disabled", false);
        }
        else {
            $("#btnsaveUser").prop("disabled", true);
        }
    }

     function ValidateName(data) {

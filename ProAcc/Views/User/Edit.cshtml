                        $("#lblName1").html("This Name is already taken,please Try another").show();
                        ValidateUser();
                    }
                    else {
                        $("#lblName1").html("");
                        ValidateUser();
                    }
                },
                error: function (err) {

                    alert(err);
                }
            });
            }


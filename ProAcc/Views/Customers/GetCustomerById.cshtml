    </div>
    <div class="row">
        <div class="col-lg-12">

            <div class="col-md-offset-2 col-md-12">
                <input type="button" value="Update" class="btn btn-info" id="btnCustomerUpdate" />
                <a class="btn btn-success" id="btnAddCustomer"><i class="fa fa-plus"></i>Add New Customer</a>
                <div class="col-lg-3" style="float:right;">
                    @Html.ActionLink("Back to List", "Index", "Customers")
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Hidden("RedirectToCustomerList", Url.Action("Index", "Customers"))


<script>

    $(document).ready(function () {

       
        $("#txtIndustrySector").keypress(function (event) {
       
            var inputValue = event.which;
            // allow letters and whitespaces only.
            if (!(inputValue >= 65 && inputValue <= 122) && (inputValue != 32 && inputValue != 0)) {
                event.preventDefault();
                $("#lblIndustrySector").html("Not Allowed").show().fadeOut(5000);
                validatecustomer();
            }
            else {
                $("#lblIndustrySector").html("").hide();
                validatecustomer();
            }
        });

        $("#btnAddCustomer").click(function () {
            window.location.href = "@Url.Action("Create", "Customers")";
        });

        $("#txtContact").keypress(function (event) {
       
            var inputValue = event.which;
            // allow letters and whitespaces only.
            if (!(inputValue >= 65 && inputValue <= 122) && (inputValue != 32 && inputValue != 0)) {
                event.preventDefault();
                $("#lblContact").html("Not Allowed").show().fadeOut(5000);
                validatecustomer();
            }
            else {
                $("#lblContact").html("").hide();
                validatecustomer();
            }
        });

        $("#txtCustomerPhone").keypress(function (e) {
            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                event.preventDefault();
                $("#lblCustomerPhone").html("Numbers Only").show().fadeOut(5000);
                validatecustomer();
            }
            else {
                $("#lblCustomerPhone").html("").hide();
                validatecustomer();
            }
        });

        $("#txtCustomerPhone").blur(function () {
            
            phone = $(this).val();
            phone = phone.replace(/[^0-9]/g,'');
            if (phone.length != 10) {
                $("#lblCustomerPhone").html("Phone number must be 10 digits").show().fadeOut(5000);
                validatecustomer();
            }
            else {
                $("#lblCustomerPhone").html("").hide();
                validatecustomer();
            }
            
       });

        $("#txtCustomerEmail").on("blur", function (event) {
           
           var str = $(this).val();
           var filter = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;

            if (!filter.test(str)) {
                $("#lblCustomerEmail").html("Email is not valid").show().fadeOut(5000);
                validatecustomer();
            }
            else {
                $("#lblCustomerEmail").html("").hide();
                validatecustomer();
            }
        });

         

        function validatecustomer() {
            
           var CompanyName = $("#txtCompanyName").val().trim();
            var IndustrySector = $("#drpIndustrySector").val()
            var Contact = $("#txtContact").val().trim();
            var custphone = $("#txtCustomerPhone").val().trim();
            var custEmail = $("#txtCustomerEmail").val().trim();

            var lblCompanyName = $("#lblCompanyName").text().trim(); 
            var lblIndustrySector = $("#lblIndustrySector").text().trim();
            var lblContact = $("#lblContact").text().trim();
            var lblcustphone = $("#lblCustomerPhone").text().trim();
            var lblcustEmail = $("#lblCustomerEmail").text().trim();
        

            if (CompanyName.length > 0 && IndustrySector.length > 0 && Contact.length > 0 && custphone.length > 0 && custEmail.length > 0 &&
                lblCompanyName == "" && lblIndustrySector == "" && lblContact == "" && lblcustphone == "" && lblcustEmail == "" ) {

                $("#btnCustomerUpdate").prop("disabled", false);
            }
            else {
                $("#btnCustomerUpdate").prop("disabled", true);
            }

        }
    });

    function ValidateName(data) {
             var letters = /^[A-Za-z._, ]+$/;
            if (!letters.test(data)) {
                return false;
            }
         }
     $("#btnCustomerUpdate").on("click", function () {
         
         var id = $("#customerid").val();
        var CompanyName = $("#txtCompanyName").val().trim();
         var IndustrySector = $("#drpIndustrySector").val();
         var Contact = $('#txtContact').val().trim();
        var custphone = $("#txtCustomerPhone").val().trim();
        var custEmail=$("#txtCustomerEmail").val().trim();
        var cre_on = $("#pcre_on").val();
         var cre_By = $("#pcre_By").val();
         
         var model = {
             Customer_Id: id,
             Company_Name: CompanyName,
             IndustrySector_ID: IndustrySector,
             Phone: custphone,
             Email: custEmail,
             Contact:Contact,
             Cre_on: cre_on,
             Cre_By: cre_By
         }
         if (CompanyName == "" || ValidateName(CompanyName) == false) {
            $("#lblCompanyName").html("Please enter the Company Name").show().fadeOut(2000);
        }
        else if (IndustrySector ==0)
        {
            $("#lblIndustrySector").html("Please enter the Industry Sector").show().fadeOut(2000);
        }
        else if (Contact ==""|| ValidateName(Contact) == false)
        {
            $("#lblContact").html("Please enter the Contact Person Name").show().fadeOut(2000);
        }
        else if (custphone=="")
        {
            $("#lblCustomerPhone").html("Please enter the Customer Phone").show().fadeOut(2000);
        }
        else if (custEmail=="")
        {
            $("#lblCustomerEmail").html("Please enter the Customer Email").show().fadeOut(2000);
        }
        else {

            $.ajax({
                    type: "POST",
                    url: '@Url.Action("Edit","Customers")',
                    data: { customer : model},
                    //dataType: "json",
                    success: function (response) {
                        if (response == "success") {
                            $.alert({
                                title: 'Success !',
                                content: 'Customer Edited <strong>Successfully</strong>..!',// <br> with some <strong>HTML</strong> <em>contents</em>',
                                icon: 'fa fa-rocket',
                                animation: 'scale',
                                closeAnimation: 'scale',
                                buttons: {
                                    okay: {
                                        text: 'Okay',
                                        btnClass: 'btn-wide mb-2 mr-2 btn btn-primary form-control',
                                        action: function (event, ui) {
                                            $(this).remove();
                                           var url = $("#RedirectToCustomerList").val();
                                            location.href = url;
                                        }
                                    }
                                }
                            });

                            
                            //loadCustomer();
                            //$("#txtCompanyName").val("");
                            //$("#txtIndustrySector").val("");
                            //$("#txtCustomerPhone").val("");
                            //$("#txtCustomerEmail").val("");
                            //$("#btnCustomerUpdate").hide();
                            //$("#btnCustomerCreate").show();
                        }
                    },
                    failure: function (response) {
                       alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
            });

        }
     });

</script>
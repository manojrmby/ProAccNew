            clearTimeout(typingTimer);
            typingTimer = setTimeout(TaskEmailCheck, doneTypingInterval);
        });

        //on keydown, clear the countdown
        $('#txtCustomerEmail','#txtCustomerPhone').on('keydown', function () {

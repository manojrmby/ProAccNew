        function TaskEmailCheck() {
            var str = $("#txtCustomerEmail").val().trim();
            var filter = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;

            if (!filter.test(str)) {
                $("#lblCustomerEmail").html("Email is not valid").show().fadeOut(2000);
            }
            else {
                $("#lblCustomerEmail").html("").show();                
            }
            validatecustomer();
        }

